{
  "name": "venomous-dashboard-notes",
  "version": "0.1.0",
  "description": "Notes service for Venomous Dashboard",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "dotenv -e envs/.env.development -- tsx watch src/index.ts",
    "build": "tsc",
    "start": "dotenv -e envs/.env.production -- node dist/index.js",
    "check:type": "tsc --noEmit --incremental --tsBuildInfoFile ./.cache/.tsbuildinfo",
    "check:eslint": "eslint . --cache --cache-location=./.cache/.eslintcache",
    "check:prettier": "prettier . --check --cache --cache-location=./.cache/.prettiercache",
    "check:all": "concurrently --kill-others-on-fail --names \"check:type,check:eslint,check:prettier\" \"npm run check:type\" \"npm run check:eslint\" \"npm run check:prettier\"",
    "format:eslint": "eslint . --fix --cache --cache-location=./.cache/.eslintcache",
    "format:prettier": "prettier . --write --cache --cache-location=./.cache/.prettiercache",
    "format:all": "concurrently --kill-others-on-fail --names \"format:eslint,format:prettier\" \"npm run format:eslint\" \"npm run format:prettier\""
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.18.8",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
