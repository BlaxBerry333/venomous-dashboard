{
    "editor.formatOnSave": true,

    /* ==================================================================================================== */
    /* Frontend */
    /* ==================================================================================================== */
    "[javascript][typescript][javascriptreact][typescriptreact][vue][css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    
    /* ==================================================================================================== */
    /* Python */
    /* ==================================================================================================== */
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },

    /* ==================================================================================================== */
    /* Go */
    /* ==================================================================================================== */
    "[go]": {
        "editor.defaultFormatter": "golang.go",
    },

    /* ==================================================================================================== */
    /* Rust */
    /* ==================================================================================================== */
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
    },
    "rust-analyzer.linkedProjects": [
        "./services/auth/Cargo.toml"
    ],

    /* ==================================================================================================== */
    /* Protobuf */
    /* ==================================================================================================== */
    "protoc": {
      "path": "/opt/homebrew/bin//protoc",
      "compile_on_save": false,
      "options": [
        "--proto_path=./protobuf/protos",
        "--proto_path=./node_modules/protobufjs"
      ]
    },

    /* ==================================================================================================== */
    /* Others */
    /* ==================================================================================================== */
    "cSpell.ignorePaths": [
        "**/.vscode/**",
        "**/dist/**",
        "**/*.pyc", 
        "**/*.log",
        "**/*.lock",
        "**/*.sh/**",
        "**/*.sql/**",
        "**/.next/**",
        "**/__pycache__/**",
        "**/venv/**",
        "**/node_modules/**",
        "**/__tests__/**",
        "**/__mocks__/**",
        "**/__snapshots__/**",
        "**/logs/**",
        "**/temp/**",
        "**/temp_*/**",
        "**/target/**",
        "**/generated/**",
        "**/*_generated/**",
    ],
    "cSpell.words": [
        "__pycache__",
        "BlaxBerry",
        "chrono",
        "dotenv",
        "dotenvy",
        "elif",
        "esac",
        "gonic",
        "iconify",
        "ILIKE",
        "Insertable",
        "jsonwebtoken",
        "makemigrations",
        "onlyletters",
        "prettiercache",
        "protoc",
        "protos",
        "serde",
        "showmigrations",
        "SIGNUP",
        "sqlx",
        "thiserror",
        "Timestamptz",
        "turbopack",
        "venv",
        "vercel",
        "xyflow"
    ]
}