{
    "editor.formatOnSave": true,

    /* ==================================================================================================== */
    /* Frontend */
    /* ==================================================================================================== */
    "[javascript][typescript][javascriptreact][typescriptreact][vue][css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    
    /* ==================================================================================================== */
    /* Python */
    /* ==================================================================================================== */
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },

    /* ==================================================================================================== */
    /* Go */
    /* ==================================================================================================== */
    "[go]": {
        "editor.defaultFormatter": "golang.go",
    },

    /* ==================================================================================================== */
    /* Rust */
    /* ==================================================================================================== */
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
    },
    "rust-analyzer.linkedProjects": [
        "./services/auth/Cargo.toml"
    ],

    /* ==================================================================================================== */
    /* Others */
    /* ==================================================================================================== */
    "cSpell.ignorePaths": [
        "**/__pycache__/**",
        "**/venv/**",
        "**/node_modules/**",
        "**/.vscode/**",
        "**/dist/**",
        "**/*.pyc",
        "**/*.log",
        "**/*.lock",
        "**/*.sh/**",
        "**/*.sql/**",
    ],
    "cSpell.words": [
        "BlaxBerry",
        "SIGNUP",
        "__pycache__",
        "gonic",
        "iconify",
        "prettiercache",
        "serde",
        "turbopack",
        "vercel",
        "venv",
        "xyflow",
        "elif",
        "makemigrations",
        "showmigrations"
    ]
}